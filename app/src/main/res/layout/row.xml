<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rTitleTv"
            android:text=""
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rImageView"/>

        <ImageView
            android:id="@+id/rImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/loading"
            android:adjustViewBounds="true"/>
        <!--android:background="@mipmap/loading"/>-->

        <TextView
            android:id="@+id/rPriceTv"
            android:layout_toRightOf="@+id/rImageView"
            android:layout_alignBottom="@+id/rImageView"
            android:text=""
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rCountryTv"
            android:layout_below="@+id/rTitleTv"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:text=""
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rStutus"
            android:layout_below="@+id/rCountryTv"
            android:text=""
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>